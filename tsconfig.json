{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "*": ["test/types/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exclude": [".next", "coverage", "node_modules"],
  "include": ["test/theme.d.ts", "test/models.d.ts", "**/*.js"]
}
